{
  "name": "slack-ai-bot",
  "version": "1.0.0",
  "description": "Slack bot with OpenAI and RAG integration",
  "license": "MIT",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "start": "node -r @babel/register ./src/app.js",
    "start:docker": "node ./app.js",
    "dev": "nodemon --exec \"node -r @babel/register\" ./src/app.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "fix": "yarn run format && yarn run lint:fix",
    "build": "babel src --out-dir dist --source-maps --copy-files",
    "clean": "rm -rf node_modules dist",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/node": "^7.23.9",
    "@babel/runtime": "^7.26.9",
    "@pinecone-database/pinecone": "^2.2.2",
    "@redis/client": "^1.5.14",
    "@slack/bolt": "^4.2.0",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "ioredis": "^5.5.0",
    "openai": "^4.28.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/plugin-transform-runtime": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@babel/register": "^7.25.9",
    "@jest/globals": "^29.7.0",
    "@slack-wrench/jest-bolt-receiver": "^3.0.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "husky": "^8.0.0",
    "ioredis-mock": "^8.9.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "supertest": "^7.0.0"
  }
}
